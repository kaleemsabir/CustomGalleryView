<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.customgallery.ui.fragments.galleryfolderview.adapter.GalleryItemViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/folderIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            app:imageUrl="@{viewModel.folderImageUrl}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/folder_icon_grey" />

        <TextView
            android:id="@+id/folderName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            tools:text ="Screen Shoots"
            android:textColor="@color/teal_700"
            android:textSize="15sp"
            app:layout_constrainedWidth="true"
            android:text="@{viewModel.folderName}"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/folderIcon"
            app:layout_constraintTop_toTopOf="@+id/folderIcon"
            tools:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text ="100"
            android:textColor="@color/teal_700"
            android:textSize="15sp"
            android:text="@{viewModel.folderCount}"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/folderIcon"
            app:layout_constraintTop_toBottomOf="@+id/folderName" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_line_color"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>